	<div class="row">
		<div class="col-xs-3">
			<h2>ユーザー情報</h2>
			<%= render 'users/profile', user: current_user %>
			<h2>写真投稿</h2>
			<%= render 'photos/form', photo: @photo %>
			<h2>お気に入り</h2>
			  <%= render 'photos/photos', photo: @photos %>
			</div>
		</div>

		<div class="col-xs-9">
			<h2>写真一覧</h2>
			<!--photos一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
					  <th>写真</th>
					  <th>タイトル</th>
				  	<th>内容</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @photos.each do |photo| %>
					<tr>
						<td>
						  <%= link_to photo_path(photo) do %>
							<%= attachment_image_tag(photo, :image, :fill, 100, 100) %><br>
						  <%= photo.user.name %>
						  <% end %>
						</td>
						<td><%= link_to photo.title, photo_path(photo), class: "photo_#{photo.id}" %></td>
						<td><%= photo.body %></td>

						<td><% if photo.favorited_by?(current_user) %>
					         <%= link_to photo_favorite_path(photo), method: :delete do %>
	                         <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	                         <%= photo.favorites.count %> いいね
			                <% end %>
			                <% else %>
			                  <%= link_to photo_favorites_path(photo), method: :post do %>
			                  <i class="fa fa-heart-o" aria-hidden="true"></i>
			                  <%= photo.favorites.count %> いいね
			               <% end %>
	              <% end %>
	          </td>
						<td>コメント数:<%= photo.photo_comments.count %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<!--photos一覧 -->
		</div>
	</div>
