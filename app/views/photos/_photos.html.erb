<% photos.each do |photo| %>
  <% if current_user.own_photo?(photo) %>
    <div style='display: inline; float: right;'>
      <%= link_to edit_photo_path(photo), id: :"button-edit-#{photo.id}" %>
      <%= link_to photo_path(photo), id: :"button-delete-#{photo.id}",method: :delete, data: { confirm: '削除してよろしいですか？' } %>
    </div>
  <% else %>
    <div style='display: inline; float: right;'>
       <%= render 'photos/bookmark_area', photo: photo %>
    </div>
  <% end %>
<% end %>