<h2>フォロー中</h2>

<div class="row">
  <div class="col-xs-12">
		<h2>ユーザー</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>プロフィール画像</th>
					<th>名前</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @user.following_user.each do |user| %>
				<tr>
					<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= user.name %></td>
					<td>フォロー数：<%= user.following.count %></td>
					<td>フォロワー数：<%= user.followed.count %></td>
					<td><%= link_to "詳細", user_path(user), class: "user_#{user.id}" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--users一覧 -->
  </div>
</div>
